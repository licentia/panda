<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <panda_general>
            <load>
                <delay>1</delay>
            </load>
        </panda_general>
        <panda_nuntius>
            <info>
                <refresh>1</refresh>
                <enabled>1</enabled>
                <percentage>15</percentage>
                <recent>7</recent>
                <auto>1</auto>
                <count>500</count>
                <queue>1000</queue>
                <stats>365</stats>
                <track>1</track>
                <warning>1</warning>
                <customer_list>0</customer_list>
                <abandoned>180</abandoned>
                <subscriber_hours>0</subscriber_hours>
            </info>
            <transactional>
                <enabled>0</enabled>
            </transactional>
            <bounces>
                <max_bounces>3</max_bounces>
            </bounces>
        </panda_nuntius>
        <panda_equity>
            <kpis>
                <enabled>1</enabled>
            </kpis>
            <reports>
                <types>global,age,region,gender,attribute,country</types>
            </reports>
        </panda_equity>
        <panda_magna>
            <customer>
                <enabled>1</enabled>
            </customer>
            <segments>
                <acl>0</acl>
                <refresh>1</refresh>
                <percentage>15</percentage>
                <recent>7</recent>
                <process>1000</process>
            </segments>
        </panda_magna>
        <panda_prices>
            <segment_prices>
                <percentage>0</percentage>
            </segment_prices>
            <prices>
                <enabled>0</enabled>
                <customer_attribute>panda_product_prices</customer_attribute>
                <product_attribute>panda_product_prices</product_attribute>
            </prices>
        </panda_prices>
    </default>
</config>
