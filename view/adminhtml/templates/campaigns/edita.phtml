<div class="entry-edit">
    <fieldset class="fieldset admin__fieldset " id="params_fieldset">
        <legend class="admin__legend legend">
            <span><?= /* @noEscape */
                __('Load template') ?></span>
        </legend>
        <br>

        <table class="form-list" cellspacing="0">
            <tbody>
            <tr>
