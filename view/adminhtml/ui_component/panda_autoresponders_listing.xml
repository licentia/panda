<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">panda_autoresponders_listing.panda_autoresponders_listing_data_source</item>
            <item name="deps" xsi:type="string">panda_autoresponders_listing.panda_autoresponders_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">panda_autoresponders_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">New Autoresponder</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/new</item>
            </item>
        </item>
    </argument>
    <dataSource name="panda_autoresponders_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">pandaAutorespondersGridDataProvider</argument>
            <argument name="name" xsi:type="string">panda_autoresponders_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">autoresponder_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">autoresponder_id</item>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">true</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="panda_autoresponders_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="childDefaults" xsi:type="array">
                    <item name="fieldAction" xsi:type="array">
                        <item name="provider" xsi:type="string">panda_autoresponders_columns.panda_autoresponders_columns.panda_autoresponders_columns.actions</item>
                        <item name="target" xsi:type="string">applyAction</item>
                        <item name="params" xsi:type="array">
                            <item name="0" xsi:type="string">edit</item>
                            <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                        </item>
                    </item>
                </item>
            </item>
        </argument> <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">0</item>
                    <item name="indexField" xsi:type="string">autoresponder_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="autoresponder_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="label" xsi:type="string" translate="true">ID</item>
                </item>
            </argument>
        </column>
        <column name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                </item>
            </argument>
        </column>
        <column name="event">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Licentia\Panda\Ui\Component\Listing\Column\Autoresponders\Options</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Event</item>
                </item>
            </argument>
        </column>
        <!--<column name="total_messages">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">N. Sends</item>
                </item>
            </argument>
        </column>-->
        <column name="conversions_number">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Conversions Number</item>
                </item>
            </argument>
        </column>
        <column name="conversions_amount" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Conversions Amount</item>
                </item>
            </argument>
        </column>
        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Active</label>
            </settings>
        </column>
        <column name="conversions_average" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Conversions Average</item>
                </item>
            </argument>
        </column>

        <column name="from_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Start Date</label>
                <timezone>false</timezone>
                <dateFormat>MMM dd, YYYY</dateFormat>
                <fieldClass>
                    <class name="column_120">true</class>
                    <class name="right">true</class>
                </fieldClass>
            </settings>
        </column>
        <column name="to_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">End Date</label>
                <timezone>false</timezone>
                <dateFormat>MMM dd, YYYY</dateFormat>
                <fieldClass>
                    <class name="column_120">true</class>
                    <class name="right">true</class>
                </fieldClass>
            </settings>
        </column>
        <column name="unique_views">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">U. Views</item>
                </item>
            </argument>
        </column>
        <column name="unique_clicks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">U. Clicks</item>
                </item>
            </argument>
        </column>
        <column name="tags">
            <settings>
                <options class="Licentia\Panda\Model\Source\Tags"/>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Tags</label>
            </settings>
        </column>
        <actionsColumn name="action_queue" class="Licentia\Panda\Ui\Component\Listing\Column\Autoresponders\Queue">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Queue</item>
                    <item name="fieldClass" xsi:type="string">column_100</item>
                    <item name="sortOrder" xsi:type="number">1200</item>
                </item>
            </argument>
        </actionsColumn>
        <actionsColumn name="action_campaigns" class="Licentia\Panda\Ui\Component\Listing\Column\Autoresponders\Campaigns">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Campaigns</item>
                    <item name="fieldClass" xsi:type="string">column_120</item>
                    <item name="sortOrder" xsi:type="number">1300</item>
                </item>
            </argument>
        </actionsColumn>
        <actionsColumn name="actions" class="Licentia\Panda\Ui\Component\Listing\Column\AutorespondersActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Actions</item>
                    <item name="sortOrder" xsi:type="number">2000</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
