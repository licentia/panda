<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">panda_goals_listing.panda_goals_listing_data_source</item>
            <item name="deps" xsi:type="string">panda_goals_listing.panda_goals_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">panda_goals_columns</item>
    </argument>
    <dataSource name="panda_goals_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">pandaGoalsGridDataProvider</argument>
            <argument name="name" xsi:type="string">panda_goals_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">goal_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">goal_id</item>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="panda_goals_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="childDefaults" xsi:type="array">
                    <item name="fieldAction" xsi:type="array">
                        <item name="provider" xsi:type="string">panda_goals_listing.panda_goals_listing.panda_goals_columns.actions</item>
                        <item name="target" xsi:type="string">applyAction</item>
                        <item name="params" xsi:type="array">
                            <item name="0" xsi:type="string">edit</item>
                            <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                        </item>
                    </item>
                </item>
            </item>
        </argument>
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">0</item>
                    <item name="indexField" xsi:type="string">goal_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="goal_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="label" xsi:type="string" translate="true">ID</item>
                </item>
            </argument>
        </column>
        <column name="goal_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Licentia\Panda\Ui\Component\Listing\Column\Goals\Types</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="editor" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Goal Type</item>
                </item>
            </argument>
        </column>
        <column name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                </item>
            </argument>
        </column>
        <column name="variation">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Variation</item>
                </item>
            </argument>
        </column>
        <column name="original_value" class="Licentia\Panda\Ui\Component\Listing\Column\Number">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Original Value</item>
                    <item name="fieldClass" xsi:type="string">right</item>
                </item>
            </argument>
        </column>
        <column name="current_value" class="Licentia\Panda\Ui\Component\Listing\Column\Number">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Current Value</item>
                    <item name="fieldClass" xsi:type="string">right</item>
                </item>
            </argument>
        </column>
        <column name="expected_value" class="Licentia\Panda\Ui\Component\Listing\Column\Number">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Expected Value</item>
                    <item name="fieldClass" xsi:type="string">right</item>
                </item>
            </argument>
        </column>
        <column name="from_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Start Date</label>
                <timezone>false</timezone>
                <dateFormat>MMM dd, YYYY</dateFormat>
                <fieldClass>
                    <class name="column_120">true</class>
                    <class name="right">true</class>
                </fieldClass>
            </settings>
        </column>
        <column name="to_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">End Date</label>
                <timezone>false</timezone>
                <dateFormat>MMM dd, YYYY</dateFormat>
                <fieldClass>
                    <class name="column_120">true</class>
                    <class name="right">true</class>
                </fieldClass>
            </settings>
        </column>
        <column name="result">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="array">
                    <item name="accomplished" xsi:type="array">
                        <item name="value" xsi:type="string">1</item>
                        <item name="label" xsi:type="string" translate="true">Accomplished</item>
                    </item>
                    <item name="failed" xsi:type="array">
                        <item name="value" xsi:type="string">0</item>
                        <item name="label" xsi:type="string" translate="true">Failed</item>
                    </item>
                    <item name="running" xsi:type="array">
                        <item name="value" xsi:type="string">2</item>
                        <item name="label" xsi:type="string" translate="true">Running</item>
                    </item>
                    <item name="standby" xsi:type="array">
                        <item name="value" xsi:type="string">3</item>
                        <item name="label" xsi:type="string" translate="true">Stand By</item>
                    </item>
                </item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="label" xsi:type="string" translate="true">Result</item>
                    <item name="dataType" xsi:type="string">select</item>
                </item>
            </argument>
        </column>
        <actionsColumn name="actions" class="Licentia\Panda\Ui\Component\Listing\Column\GoalsActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
